<Window x:Class="MSD.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:MSD"
        Title="MainWindow" Height="540" Width="960">
    <Grid Background="#FFFFFCEE" RenderTransformOrigin="0.50,0.5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid Grid.Column="2">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
		</Grid>
        <Grid Grid.Column="0"
              Grid.Row="0"
              Grid.RowSpan="2">
            <v:MenuView Grid.Row="1"
                        DataContext="{Binding MenuView}"/>
            
        </Grid>
		</Grid>
</Window>
