<Window x:Class="MSD.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:v="clr-namespace:MSD.Views"
        xmlns:m="clr-namespace:MSD.ViewModels"
        Title="MainWindow" Height="540" Width="960">
    <Window.Resources>
        <DataTemplate DataType="{x:Type m:MatchInvoerViewModel}">
            <v:MatchInvoerView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:StageViewModel}">
            <v:StageView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:DocentViewModel}">
            <v:DocentView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:StudentViewModel}">
            <v:StudentView DataContext="{Binding}" />
        </DataTemplate>
        <DataTemplate DataType="{x:Type m:GebruikerViewModel}">
            <v:GebruikerView DataContext="{Binding}" />
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FFFFFCEE" RenderTransformOrigin="0.50,0.5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
        <Grid Grid.Column="0"
              Grid.Row="0">

            <Label Content="MSD" Margin="60.91,22,58.616,0" VerticalAlignment="Top" FontSize="26.667" FontWeight="Bold"/>

            <Button Command="{Binding ShowMatchCommand}" Content="Matchen" Margin="37,150.453,38,0" VerticalAlignment="Top" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" Width="125" Height="25"/>

            <Button Command="{Binding ShowUitloggenCommand}" Content="Uitloggen" Margin="37,0,38,40.04" VerticalAlignment="Bottom" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" Width="125" Height="25"/>

            <Button Command="{Binding ShowStageCommand}" Content="Stage" Margin="37,200.453,38,0" VerticalAlignment="Top" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" Width="125" Height="25"/>

            <Button Command="{Binding ShowStudentCommand}" Content="Studenten" Margin="37,0,38,188.04" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" VerticalAlignment="Bottom" Height="25" Width="125"/>

            <Button Command="{Binding ShowDocentCommand}" Content="Docenten" Margin="37,248.953,38,236.047" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" Width="125" Height="25"/>

            <Button Command="{Binding ShowGebruikerCommand}" Content="Gebruikers" Margin="37,0,38,89.04" VerticalAlignment="Bottom" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00" Width="125" Height="25"/>

            <Label DataContext="{Binding UserName}"  Margin="37,81.83,40.616,0" VerticalAlignment="Top" FontSize="14.667"/>


        </Grid>
        <ContentControl Grid.Column="1"
                        Name="Contents"
                        Content="{Binding Contents}" />
        
		</Grid>
</Window>
