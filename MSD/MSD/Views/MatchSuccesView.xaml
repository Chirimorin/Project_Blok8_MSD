        <DataGrid HorizontalAlignment="Left" Margin="164,258,0,0" VerticalAlignment="Top" Height="46" Width="547" AutoGenerateColumns="False" ItemsSource="{Binding datastudent}" Opacity="0.35">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding naam}" Header="naam"/>
                <DataGridTextColumn Binding="{Binding NAW_gegevens}" Header="NAW_gegevens"/>
                <DataGridTextColumn Binding="{Binding Studie}" Header="Studie"/>
                <DataGridTextColumn Binding="{Binding woonplaats}" Header="woonplaats"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
