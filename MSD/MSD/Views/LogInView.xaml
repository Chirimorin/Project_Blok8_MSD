<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MSD.LogInView"
	x:Name="Window"
	Title="LogInView"
	Width="375" Height="375" Background="#FFFFFCEE">
    
    <Grid x:Name="LayoutRoot">
        <Label Content="Inloggen" HorizontalAlignment="Left" Margin="130.123,21,0,0" VerticalAlignment="Top" FontSize="18.667" FontWeight="Bold"/>

        <TextBox Margin="32.123,146.96,39.324,176.08" TextWrapping="Wrap" Text="TextBox">

            <TextBox.BorderBrush>

                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">
                    <GradientStop Color="#FFABADB3" Offset="0.05"/>
                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>
                </LinearGradientBrush>
            </TextBox.BorderBrush>
        </TextBox>
        <Label Content="Wachtwoord" HorizontalAlignment="Left" Margin="32.123,0,0,132.04" VerticalAlignment="Bottom" FontSize="16"/>
        <Label Content="Naam" HorizontalAlignment="Left" Margin="32.123,111.68,0,0" VerticalAlignment="Top" FontSize="16"/>

        <Button Content="Log in" Click="LogIn" HorizontalAlignment="Right" Margin="0,0,39.324,34.04" VerticalAlignment="Bottom" Width="75" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00"/>

        <Label Content="*U heeft niet de juiste gegevens ingevoerd&#xA;probeer het opnieuw" HorizontalAlignment="Right" Margin="0,69.76,99.393,0" VerticalAlignment="Top" Foreground="#FFC20000"/>

        <PasswordBox Height="21.96" Margin="32.124,0,39.324,102" VerticalAlignment="Bottom">

            <PasswordBox.BorderBrush>

                <LinearGradientBrush EndPoint="0,20" MappingMode="Absolute" StartPoint="0,0">

                    <GradientStop Color="#FFABADB3" Offset="0.05"/>

                    <GradientStop Color="#FFE2E3EA" Offset="0.07"/>

                    <GradientStop Color="#FFAEAEAE" Offset="1"/>

                </LinearGradientBrush>

            </PasswordBox.BorderBrush>

        </PasswordBox>

        <Button Content="Wachtwoord vergeten" Click="WachtwoordVergeten" HorizontalAlignment="Right" Margin="0,0,148.447,34.04" VerticalAlignment="Bottom" Width="161.18" FontSize="14.667" Background="#FFEA8104" BorderBrush="#FFA65A00"/>

    </Grid>

</Window>