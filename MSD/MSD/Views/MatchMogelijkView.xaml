                <DataGridTextColumn x:Name="Naam"/>

                <DataGridTextColumn x:Name="Opleiding"/>

            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Tweede lezer" HorizontalAlignment="Left" Margin="476,89,0,0" VerticalAlignment="Top" FontSize="16" FontStyle="Italic"/>
        <DataGrid HorizontalAlignment="Left" Margin="476,120.28,0,0" VerticalAlignment="Top" Height="266.72" Width="238">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Naam1"/>
                <DataGridTextColumn x:Name="Opleiding1"/>
            </DataGrid.Columns>
        </DataGrid>
