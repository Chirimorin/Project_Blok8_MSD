<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MSD.Views.MatchMogelijkView"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" Width="752" Height="510">

    <Grid x:Name="LayoutRoot">

        <Label Content="Mogelijke matchen" Margin="283,36,290.473,0" VerticalAlignment="Top" FontSize="18.667" FontWeight="Bold"/>

        <Label Content="Student" HorizontalAlignment="Left" Margin="52,89,0,0" VerticalAlignment="Top" FontSize="16" FontStyle="Italic"/>
        <Label Content="Begeleiding" HorizontalAlignment="Left" Margin="210,89,0,0" VerticalAlignment="Top" FontSize="16" FontStyle="Italic"/>

        <Label Content="Studentnummer" HorizontalAlignment="Left" Margin="52,133,0,0" VerticalAlignment="Top"/>

        <Label Content="Voornaam" HorizontalAlignment="Left" Margin="52,162.96,0,0" VerticalAlignment="Top"/>

        <Label Content="Achternaam" HorizontalAlignment="Left" Margin="52,192.92,0,0" VerticalAlignment="Top"/>

        <Label Content="Opleiding" HorizontalAlignment="Left" Margin="52,0,0,242.04" VerticalAlignment="Bottom"/>

        <Label Content="Jaar" HorizontalAlignment="Left" Margin="52,0,0,211.08" VerticalAlignment="Bottom"/>

        <Button Command="{Binding MatchenCommand}" Content="Matchen" Margin="0,0,38,36.04" VerticalAlignment="Bottom" FontSize="14.667" HorizontalAlignment="Right" Width="75" Height="26"/>

        <Button Command="{Binding ShowDetailsCommand}" Content="Details" Margin="0,0,139.324,36.04" VerticalAlignment="Bottom" FontSize="14.667"  HorizontalAlignment="Right" Width="75" Height="26"/>

        <Label Content="Soort" HorizontalAlignment="Left" Margin="52,303.92,0,0" VerticalAlignment="Top"/>

        <Label Content="Bedrijf" HorizontalAlignment="Left" Margin="52,347.76,0,0" VerticalAlignment="Top"/>

